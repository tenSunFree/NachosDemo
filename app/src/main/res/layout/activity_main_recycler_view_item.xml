<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!-- 第一個標籤 -->
    <FrameLayout
            android:id="@+id/labelFrameLayout"
            android:background="#067FC0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/labelTextView"
                android:textSize="18dp"
                android:layout_margin="12dp"
                android:layout_gravity="center_vertical"
                android:textColor="#FFFFFF"
                android:text="Compute Comparison"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </FrameLayout>

    <!-- 內容 -->
    <LinearLayout
            android:layout_margin="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <!-- 機型訊息 -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/phoneModelTextView"
                        android:textSize="14dp"
                        android:textColor="#333F4A"
                        android:text="Your Device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/phoneDetailTextView"
                        android:layout_marginTop="2dp"
                        android:textSize="12dp"
                        android:textColor="#576673"
                        android:text="HTC U11HTC U11HTC U11HTC U11HTC U11HTC U11HTC U11HTC U11HTC U11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>

            <TextView
                    android:id="@+id/phoneScoreTextView"
                    android:textSize="26dp"
                    android:text="7773"
                    android:textColor="#46515C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- 分隔線 -->
        <View
                android:layout_marginTop="2dp"
                android:background="#263A4B"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <!-- 長條圖 -->
        <me.zhouzhuo.zzhorizontalprogressbar.ZzHorizontalProgressBar
                android:layout_marginTop="4dp"
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:zpb_show_mode="rect"
                app:zpb_padding="0dp"
                app:zpb_pb_color="#44A4F0"
                app:zpb_bg_color="#FDFDFD"
                app:zpb_max="100"
                app:zpb_progress="30"/>
    </LinearLayout>
</LinearLayout>